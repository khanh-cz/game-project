{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build SDL2 Minesweeper",
      "type": "shell",
      "command": "g++",
      "args": [
        "main.c",
        "src/*.c",                      // Biên dịch tất cả file trong thư mục src
        "-ID:/SDL2/include",           // Đường dẫn tới SDL2/include
        "-LD:/SDL2/lib",               // Đường dẫn tới SDL2/lib
        "-lmingw32",
        "-lSDL2main",
        "-lSDL2",
        "-o",
        "minesweeper.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
